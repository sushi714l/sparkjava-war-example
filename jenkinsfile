pipeline {
    agent any
     tools{
         maven 'maven'
     }

    stages {
        stage('build') {
            steps {
                sh 'mvn clean package'
                 }
        }
        stage('deploy'){
            steps{
                deploy adapters: [tomcat9(credentialsId: 'tom', path: '', url: 'http://15.207.248.43:8070/')], contextPath: 'sparkjava-war-example', war: '**/*.war'
            }
        }
    }

}
